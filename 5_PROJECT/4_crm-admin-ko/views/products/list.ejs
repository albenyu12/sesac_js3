<%- include('../partials/head') %>
<%- include('../partials/nav') %>

<div class="row space">
  <h1>상품</h1>
  <a class="btn" href="/products/new">신규</a>
</div>

<form class="card row gap" method="get" action="/products">
  <input name="q" placeholder="Search product name" value="<%= q %>" />
  <button class="btn secondary" type="submit">Apply</button>
</form>

<div class="card">
  <table>
    <thead><tr><th>ID</th><th>Name</th><th>Price</th><th>Ordered Lines</th></tr></thead>
    <tbody>
    <% rows.forEach(r => { %>
      <tr>
        <td><%= r.id %></td>
        <td><a href="/products/<%= r.id %>"><%= r.name %></a></td>
        <td><%= r.price %></td>
        <td><%= r.ordered_lines %></td>
      </tr>
    <% }) %>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') %>
